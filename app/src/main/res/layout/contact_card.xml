<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:layout_constraintCircleRadius="6dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_height="45dp"
            android:layout_width="45dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">
            <ImageView
                android:src="@drawable/ic_baseline_contact_phone_24"
                android:layout_height="45dp"
                android:layout_width="45dp"
                />
            <TextView
                android:id="@+id/number_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000000"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">
        <ImageView
            android:src="@drawable/ic_baseline_call_24"
            android:layout_height="45dp"
            android:layout_width="45dp"
            />
        <TextView
            android:id="@+id/call_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">
            <ImageView
                android:src="@drawable/ic_baseline_sms_24"
                android:layout_height="45dp"
                android:layout_width="45dp"
                />
            <TextView
                android:id="@+id/sms_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMS"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">
            <ImageView
                android:src="@drawable/ic_baseline_info_24"
                android:layout_height="45dp"
                android:layout_width="45dp"
                />
            <TextView
                android:id="@+id/infor_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>